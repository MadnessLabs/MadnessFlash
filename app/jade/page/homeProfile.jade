.state-homeProfile
    .form
        .item.item-image
            img(src="img/icon.png" alt="")
            h1 EmJ
        .list
            .item.item-divider.points Points
            .item
                .pick
                    .row
                        .col-xs-6
                            .count
                                i.icon.ion-plus
                                span 20
                        .col-xs-6
                            .count
                                i.icon.ion-minus
                                span 10
                        .col-xs-6
                            .count
                                i.icon.ion-asterisk
                                span 5
                        .col-xs-6
                            .count
                                i.icon.slash /
                                span 2
            .item.item-divider Information
            .item.item-input.item-stacked-label
                label.input-label(for="nickname") Nickname
                input#nickname(type="text" placeholder="EmJ")
            .item.item-input.item-stacked-label.item-icon-right
                label.input-label(for="login") Login
                input#login(type="text" placeholder="Google")
                a.icon.ion-android-more-vertical.more(ng-click="profile.selectProfilePopover($event)")
            .item.item-toggle
                | Random Numbers
                label.toggle.toggle-positive
                    input(type="checkbox")
                    .track
                        .handle
